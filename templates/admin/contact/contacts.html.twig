{% extends 'base_admin.html.twig' %}

{% block title %}Admin DashBoard{% endblock %}


{% block breadcrumb %}
    <li class="breadcrumb-item active">Contact</li>
{% endblock %}


{% block body %}

    
    

    <div class="card mb-4 mt-5">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Liste des contacts
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nom et prenom</th>
                            <th>email</th>
                            <th>subject</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Nom et prenom</th>
                            <th>email</th>
                            <th>subject</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for contact in contacts %}
                            <tr>
                                <td>{{ contact.lastname ~ " " ~ contact.firstname }}</td>
                                <td>{{ contact.email }}</td>
                                <td>{{ contact.subject }}</td>
                                <td>{{ contact.getCreatedAt|date('Y-m-d ; H:i') }}</td>
                                <td>
                                    <a href="{{ path('admin_show_contact', {'contact':contact.id}) }}" class="btn btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    

{% endblock %}
